@page "/fetchdata"
@using GitInsight.Data
@inject GitInsightController Controller

<PageTitle>GitInsight</PageTitle>

<h1>GitInsight</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (result == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>result</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@result</td>
                </tr> 
        </tbody>
    </table>
}

@code {
    private string? result;

    protected override void OnInitialized()
    {
        Microsoft.AspNetCore.Mvc.IActionResult tempResult = Controller.GetAnalysis("SpaceVikingEik/hewwo", "FQMode");
        result = tempResult.ToString();
    }
}
